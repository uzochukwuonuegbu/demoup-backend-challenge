{
  "name": "node-express-backend-boilerplate",
  "version": "0.1.0",
  "scripts": {
    "init-schema": "ts-node initSchema.ts",
    "test:unit": "jest -c jest.unit.config.js",
    "test:integration": "jest -c jest.integration.config.js",


    "start": "DOTENV_CONFIG_PATH=.env npm run copy:env:prod && npm run create-db && npm run build && node -r dotenv/config ./.build/src/main.js",
    "dev": "DOTENV_CONFIG_PATH=dev.env npm run copy:env:dev && npm run create-db-dev && ts-node -r dotenv/config ./src/main.ts",
    "build": "npm run lint && npm run clean && tsc",
    "lint": "tslint --project .",
    "clean": "rimraf ./.build",
    "copy:env:dev": "cp dev.env.sample dev.env",
    "copy:env:prod": "cp env.sample .env",
    "test": "jest --coverage --config ./test/jest.config.json  --runInBand --detectOpenHandles --forceExit",
    "create-db": "psql -U postgres -f ./init.db.sql",
    "create-db-dev": "psql -U postgres -f ./init-dev.db.sql"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.1",
    "uuid": "^9.0.0",
    "express-serve-static-core": "^0.1.1",
    "joi": "^17.9.1",
    "sequelize": "^6.31.0",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "@types/pg": "^8.10.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3",
    "@types/jest": "^24.0.25",
    "jest": "^29.4.3",
    "prettier": "^1.19.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "engine-strict": true
}
